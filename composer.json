{
    "name": "sylapi/omnipay-mokka",
    "description": "Mokka gateway for Omnipay payment processing library",
    "type": "library",
    "license": "MIT",
    "require": {
        "league/omnipay": "^3",
        "omnipay/tests": "^4.1",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "autoload": {
      "psr-4": {
        "Omnipay\\Mokka\\": "src"
      }
    },
    "scripts": {
      "phpstan": "vendor/bin/phpstan",
      "tests": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
